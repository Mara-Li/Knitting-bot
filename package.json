{
	"name": "knitting-bot",
	"version": "2.4.0",
	"description": "A bot used to add new user automatically in thread, without pinging them!",
	"private": true,
	"type": "module",
	"engines": {
		"node": "20.x"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "pnpm run typecheck && node esbuild.config.mjs",
		"build:watch": "node esbuild.config.mjs --watch",
		"prestart": "pnpm run build",
		"start": "pm2 start dist/src/index.js --name knitting-bot --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
		"stop": "pm2 stop knitting-bot",
		"prerestart": "pnpm run build",
		"restart": "pm2 restart knitting-bot",
		"delete": "pm2 delete knitting-bot",
		"dev": "tsx watch --clear-screen=false src/index.ts",
		"dev:prod": "cross-env ENV=production tsx watch --clear-screen=false src/index.ts",
		"prerelease": "pnpm run typecheck",
		"release": "commit-and-tag-version",
		"lint": "biome check --write src/ --unsafe",
		"prod": "pnpm build && node dist/src/index.js"
	},
	"commit-and-tag-version": {
		"t": ""
	},
	"dependencies": {
		"ansi-colors": "^4.1.3",
		"commit-and-tag-version": "^12.6.0",
		"cross-env": "^10.1.0",
		"discord.js": "^14.22.1",
		"dotenv": "^17.2.3",
		"enmap": "^5.9.8",
		"esbuild": "^0.27.2",
		"esbuild-fix-imports-plugin": "^1.0.23",
		"glob": "^13.0.0",
		"i18next": "^25.7.3",
		"load-tsconfig": "^0.2.5",
		"readline-sync": "^1.4.10",
		"ts-dedent": "^2.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"better-sqlite3",
			"esbuild"
		]
	}
}
